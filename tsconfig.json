{
  "compilerOptions": {
    "module": "nodenext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "target": "ES2022"
  },
  "include": [
    "blockchain/*.ts",
    "util/*.ts",
    "network/*.ts",
    "wallet/*.ts",
    "miner/*.ts",
    "broker/*.ts",
    "keygen/*.ts",
    "ui/*.ts",
    "public_wallet/*.ts",
    "testing/*.ts",
    "tools/*.ts"
  ]
}